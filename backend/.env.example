# Configuration Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=votre_compte_storage
AZURE_STORAGE_ACCOUNT_KEY=votre_clé_storage
AZURE_STORAGE_CONNECTION_STRING=votre_connection_string

# Ou utiliser Azure AD (recommandé pour la production)
# AZURE_TENANT_ID=votre_tenant_id
# AZURE_CLIENT_ID=votre_client_id
# AZURE_CLIENT_SECRET=votre_client_secret

# Configuration du conteneur
AZURE_CONTAINER_NAME=uploads

# Configuration serveur
PORT=3000
NODE_ENV=development

# Application Insights (optionnel)
APPLICATIONINSIGHTS_CONNECTION_STRING=votre_connection_string_app_insights

# CORS
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Limites d'upload
MAX_FILE_SIZE_MB=100

# Configuration Email (pour les codes de vérification invités)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_app
SMTP_FROM_EMAIL=noreply@shareazure.com
APP_NAME=ShareAzure
